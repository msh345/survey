<div class="take_survey">
  <h1> <%= @survey.title %></h1>
  
  <form action="/survey/submit" method="POST">
    <input type="hidden" name="survey" value="<%= @survey.id %>">
    <ol>
      <% @survey.questions.each do |question| %>
          <% if question.question_type == "multichoice"%>
            <li><%= question.title %><br>
              <% question.choices.each do |choice| %>
              <input type="radio" name="response[<%= question.id %>]" value="<%= choice.id %>"> <%= choice.title %><br>
              <% end %>
            </li>
            
          <% else question.question_type == "text area" %>
            <li><%= question.title %><br>
              <textarea name="response[<%= question.id %>]" cols='50' rows='10' value="enter response here"></textarea><p><br></p>
            </li>
          <% end %>
      <% end %>
    </ol> 
  
  <input type="submit" value="Submit">
  </form>

</div>
