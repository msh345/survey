<h1>Results for "<%= @survey.title %>"</h1>

<% if @survey_submissions.empty? %>
<p>No one has taken your survey yet</p>
<p>Maybe you want to send them the <a href="/survey/take/<%= @survey.url %>">link</a>?</p>
<% else %>
<table border="1">
  <tr>
    <th>Submission ID</th>
    <% @questions.each do |question| %>
      <th>"<%= question.title %>"</th>
    <% end %>
  </tr>
    <% @survey_submissions.each do |survey_submission| %>
      <tr>
        <td><%= survey_submission.id %></td>
        <% survey_submission.question_responses.each do |question_response| %>
        <td><%= question_response.answer %></td>
        <% end %>
      </tr>
    <% end %>
</table>

<% end %>
